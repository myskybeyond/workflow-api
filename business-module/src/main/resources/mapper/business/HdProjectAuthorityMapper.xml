<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hdsolartech.business.mapper.HdProjectAuthorityMapper">

    <resultMap type="com.hdsolartech.business.domain.vo.HdProjectInfoVo" id="ProjectInfo">
    </resultMap>

    <select id="queryProjectListByUserId" resultMap="ProjectInfo">
        SELECT
            hpi.*
        FROM
            hd_project_info hpi
                LEFT JOIN hd_project_authority hpa ON hpa.project_id = hpi.id
        WHERE
            hpa.user_id = #{userId}
        ORDER BY hpi.create_time DESC
        LIMIT 8
    </select>
</mapper>
